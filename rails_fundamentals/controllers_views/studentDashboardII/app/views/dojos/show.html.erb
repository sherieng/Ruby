<div class ="container mt-5 bottom-border p-0">
    <div class="row bg-primary no-gutters">
        <h1 class = "bg-primary text-light p-3 col-9" ><%=@dojo.branch%></h1>
        <a href="/dojos/<%=@dojo.id%>/students/new" class="d-flex col-3 text-light my-auto justify-content-end p-3">Add a Student</a>
    </div>
    <% if flash[:notice]%>
        <p class="text-warning my-3 mx-auto"><%=flash[:notice]%></p>
    <% end %>
    <div class="col mx-auto bg-light p-3">
        <div class="d-flex row mt-4">
            <h5 class="col-2 align-text-center">Address:</h5> 
            <h5 class="col-9 p-0"><%=@dojo.street%></h5>
        </div>
        
        <div class="row">
            <h5 class="col offset-md-2 p-0"><%=@dojo.city%>, <%=@dojo.state%></h5>
        </div>
        <div class="row justify-content-end mr-3">
            <b><a class="text-info" href="/dojos">Home | </a></b>  
            <b class="ml-1"><a class="text-info" href="/dojos/<%=@dojo.id%>/edit"> Edit</a></b>
        </div>
    </div>
    
    
    <h3 class = "bg-warning text-light p-2 mt-5" ><%=@dojo.branch%> Student Roster</h3>    
    <table class="table table-sm">
        <thead>
            <tr>
                <th scope="col">First Name</th>
                <th scope="col">Last Name</th>
                <th scope="col">Email</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            <% @students.each do |student|%>
            <tr>
                <td><%=student.first_name%></td>
                <td><%=student.last_name%></td>
                <td><%=student.email%></td>
                <td class="row"><a href="/dojos/<%=@dojo.id%>/students/<%=student.id%>">Show |</a>
                <a class="ml-1 p-0" href="/dojos/<%=@dojo.id%>/students/<%=student.id%>/edit"> Edit |</a>  
                <form action= "/dojos/<%=@dojo.id%>/students/<%=student.id%>" method ='POST' class="p-0 mx-0" style="margin-top: -7px; marigin-left: -15px;">
                    <input type ="hidden" name="_method" value="delete">
                    <input type ="hidden" name ="authenticity_token" value ="<%=form_authenticity_token%>">
                    <input type="submit" class="btn btn-link text-success" value="Delete">
                </form></td>
            </tr>
            <%end%>
        </tbody>
    </table>

</div>